@model IEnumerable<ProjectCuoiki.Models.footer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Table Products</h1>
    <a class="btn btn-primary my-3  " href="@Url.Action("Create","Footers")">Add new</a>

    <!-- DataTales Example -->
    <div class="card shadow mb-4 ">
        <div class="card-header py-3 d-flex justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>

        </div>
        <div class="card-body">
            <div class="table-responsive" id="getProduct">
                <table class="table table-bordered text-center " id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Về chúng tôi</th>
                            <th>Ngày tạo</th>
                            <th>Công bố</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Về chúng tôi</th>
                            <th>Ngày tạo</th>
                            <th>Công bố</th>
                            <th>Thao tác</th>
                        </tr>
                    </tfoot>
                    <tbody>





                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.email</td>
                                <td>@i.phone</td>
                                <td>@i.address</td>
                                <td>@i.aboutus</td>
                                <td>@i.datebegin</td>
                                <td>
                                    @if (i.hide == true)
                                    {
                                        <i class="fas fa-times" style="color: #f70808;"></i>

                                    }
                                    else
                                    {
                                        <i class="fas fa-check" style="color: #18f109;"></i>

                                    }
                                </td>
                                <td><a class="btn btn-primary" href="@Url.Action("Edit","Footers", new {id=i.id})">Sửa</a><a href="@Url.Action("Delete","Footer", new {id=i.id})" class="btn btn-danger">Xóa</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>
